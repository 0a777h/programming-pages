{%- comment -%}

page_root
  extracts the first component of a page url

params:
  page=<page-object>

{%- endcomment -%}
{%- assign url_pieces = include.page.url | split: '/' -%}
{%- for piece in url_pieces -%}
  {%- unless piece.size > 0 -%}{%- continue -%}{%- endunless -%}
  /{{ piece }}
  {%- break -%}
{%- endfor -%}
